                        </Grid>-->
                        <Grid Grid.Row="1">
                            <Grid.Resources>
                                <Style x:Name="tblStyle"
                                       TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="20 10 10 10"></Setter>
                                    <Setter Property="VerticalAlignment"
                                            Value="Center"></Setter>
                                    <Setter Property="HorizontalAlignment"
                                            Value="Left"></Setter>
                                    <Setter Property="FontSize"
                                            Value="16"></Setter>
                                </Style>
                            </Grid.Resources>
                            <materialDesign:Card Margin="5 5 10 10">
                                <Grid Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Margin="10"
                                               HorizontalAlignment="Center"
                                               Text="Thông tin bệnh nhân"
                                               VerticalAlignment="Center"
                                               FontSize="25"
                                               FontWeight="Bold"
                                               Foreground="#0078D7" />

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid>
                                            <TextBlock Grid.Column="0"
                                                       Text="Ngày sinh:">
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                            </TextBlock>
                                        </Grid>

                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition />
                                            <!--<ColumnDefinition Width="auto" />
                                            <ColumnDefinition />-->
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock Grid.Column="0"
                                                       Text="Giới tính:">
                                            </TextBlock>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Địa chỉ:">
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="SĐT:">
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <TextBlock Grid.Column="0"
                                                   Text="Họ và tên:">
                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="6">
                                        <TextBlock Grid.Column="0"
                                                   Text="Yêu cầu:">
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="7">
                                        <TextBlock Grid.Column="0"
                                                   Height="40"
                                                   MaxWidth="300"                    
                                                   TextWrapping="Wrap">
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="8">
                                        <CheckBox Content="Đã đăng ký khám chuyên khoa"
                                                  x:Name="ckbDangKy"
                                                  IsChecked="True"
                                                  Margin="20 5 20 5"
                                                  FontSize="16">
                                        </CheckBox>
                                    </Grid>

                                    <Grid Grid.Row="9">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="33*"/>
                                            <ColumnDefinition Width="100*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Command="{Binding }"
                                                x:Name="btnDKKhamChuyenKhoa"
                                                Background="#0078D7"
                                                BorderBrush="#0078D7"
                                                Content="Đăng ký khám"
                                                Margin="58,5,58,20"
                                                Foreground="White"
                                                Width="150"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center" Grid.ColumnSpan="2" />
                                    </Grid>

                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
