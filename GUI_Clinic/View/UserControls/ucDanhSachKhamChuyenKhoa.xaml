                                                      KeyUp="cbxDSBenhNhan_KeyUp"
                                                      VerticalAlignment="Center"
                                                      FontSize="16">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} - {1}">
                                                                    <Binding Path="Id" />
                                                                    <Binding Path="TenBenhNhan" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Button Grid.Column="0"
                                                x:Name="btnDangKy"
                                                Command="{Binding SignedCommand}"
                                                Background="#0078D7"
                                                Content="Đăng ký"
                                                Margin="10 10 0 5"
                                                Foreground="White"
